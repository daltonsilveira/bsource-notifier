# ── ASP.NET Core ────────────────────────────────────────────
ASPNETCORE_ENVIRONMENT=Production

# ── RabbitMQ ────────────────────────────────────────────────
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=notification.send

# ── MassTransit Retry ───────────────────────────────────────
MASSTRANSIT_RETRY_COUNT=3
MASSTRANSIT_RETRY_INTERVAL=10

# ── Notification – WebSocket ────────────────────────────────
WEBSOCKET_ENABLED=true

# ── Notification – Email / SMTP ─────────────────────────────
EMAIL_ENABLED=true
EMAIL_FROM=admin@hubconn.com.br
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=admin@hubconn.com.br
SMTP_PASSWORD=changeme
SMTP_ENABLE_SSL=true

# ── Notification – SMS / Telegram / WhatsApp ────────────────
SMS_ENABLED=false
TELEGRAM_ENABLED=false
WHATSAPP_ENABLED=false
